@model MatchService.Models.PlacesAtMatchViewModel

<h2>Match @Model.Match.Header</h2>
<h4>Match time @Model.Match.DateTime.ToString("dd.MM.yy hh:mm")</h4>

<h2>Available Places</h2>

@foreach (var sectorNumber in Model.PlacesBySector.Keys)
{
    var placesInSector = Model.PlacesBySector[sectorNumber];
    <div>
        <h4> Sector @sectorNumber</h4>
        @foreach (var place in placesInSector)
        {
            if (Model.ReservedPlaces.Contains(place.Id))
            {
                @place.Number;
            }
            else
            {
                <a href="@Url.Action("ReservePlace", new { placeId = place.Id })">@place.Number</a>
            }
        }
    </div>
}

